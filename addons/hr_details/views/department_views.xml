<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================== Department Tree/List View ===================== -->
    <record id="view_department_tree" model="ir.ui.view">
        <field name="name">department.model.list</field>
        <field name="model">department.model</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- ===================== Department Form View ===================== -->
    <record id="view_department_form" model="ir.ui.view">
        <field name="name">department.model.form</field>
        <field name="model">department.model</field>
        <field name="arch" type="xml">
            <form string="Add Department">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================== Department Action ===================== -->
    <record id="action_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">department.model</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ===================== Department Menu ===================== -->
    <menuitem id="menu_department_sub" name="Departments"
              parent="menu_student_root"
              action="action_department"/>

</odoo>
